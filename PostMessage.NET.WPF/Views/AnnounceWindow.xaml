<Window x:Class="PostMessage.NET.WPF.AnnounceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Width="700" Height="300" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowStyle="None" AllowsTransparency="True">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Padding="0" TextWrapping="Wrap" Text="{Binding Message, UpdateSourceTrigger=PropertyChanged}" Foreground="{Binding MessageBrush, UpdateSourceTrigger=PropertyChanged}" FontSize="72" FontFamily="Microsoft YaHei UI"/>
    </Grid>
</Window>
